<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/quiz_name_item_instructor_quiz_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz 1"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/class_name_item_instructor_quiz_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SE-E" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date_item_instructor_quiz_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/12/2020 5:00PM" />
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/amount_item_transaction_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <Button
        android:id="@+id/button_item_transaction_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

</RelativeLayout>