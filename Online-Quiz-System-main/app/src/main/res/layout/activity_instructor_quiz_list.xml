<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_instructor_quiz_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quiz_name_item_instructor_quiz_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz 1"
                    android:textSize="20sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/class_name_item_instructor_quiz_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SE-E" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/date_item_instructor_quiz_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07/12/2020 5:00PM" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_item_instructor_quiz_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="Closed"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_item_instructor_quiz_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:onClick="InstructorQuizItem1Button" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_instructor_quiz_list_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_instructor_quiz_list_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quiz_name_item_instructor_quiz_list1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz 2"
                    android:textSize="20sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/class_name_item_instructor_quiz_list1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SE-E" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/date_item_instructor_quiz_list1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/12/2020 5:00PM" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_item_instructor_quiz_list1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="Closed"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_item_instructor_quiz_list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_instructor_quiz_list_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_instructor_quiz_list_layout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quiz_name_item_instructor_quiz_list2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz 3"
                    android:textSize="20sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/class_name_item_instructor_quiz_list2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SE-E" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/date_item_instructor_quiz_list2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21/12/2020 5:00PM" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_item_instructor_quiz_list2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="In Progress"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_item_instructor_quiz_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_instructor_quiz_list_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_instructor_quiz_list_layout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/quiz_name_item_instructor_quiz_list3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz 4"
                    android:textSize="20sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/class_name_item_instructor_quiz_list3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SE-E" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/date_item_instructor_quiz_list3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29/12/2020 5:00PM" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status_item_instructor_quiz_list3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="Scheduled"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_item_instructor_quiz_list3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:onClick="InstructorQuizListAddButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_plus" />

</androidx.constraintlayout.widget.ConstraintLayout>